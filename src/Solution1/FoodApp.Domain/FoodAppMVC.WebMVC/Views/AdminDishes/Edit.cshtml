@model FoodAppMVC.WebMVC.Models.AddDishViewModel

@{
    ViewData["Title"] = "Edit Dish";
}

<h2>Edit Dish</h2>

<form asp-action="Edit" asp-route-id="@Model.DishId" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Type" class="form-label">Type</label>
        <input asp-for="Type" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="PreparationTimeMinutes" class="form-label">Prep Time (min)</label>
        <input asp-for="PreparationTimeMinutes" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Recipe" class="form-label">Recipe</label>
        <textarea asp-for="Recipe" class="form-control"></textarea>
    </div>

    <div class="row">
        <div class="col">
            <label asp-for="Calories" class="form-label">Calories</label>
            <input asp-for="Calories" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="Proteins" class="form-label">Proteins</label>
            <input asp-for="Proteins" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="Fats" class="form-label">Fats</label>
            <input asp-for="Fats" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="Carbohydrates" class="form-label">Carbs</label>
            <input asp-for="Carbohydrates" class="form-control" />
        </div>
    </div>

    <div class="mb-3 mt-3">
        <label class="form-label">Ingredients</label>
        <select asp-for="SelectedIngredientIds" asp-items="ViewBag.Ingredients" multiple class="form-control"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Image (optional)</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
