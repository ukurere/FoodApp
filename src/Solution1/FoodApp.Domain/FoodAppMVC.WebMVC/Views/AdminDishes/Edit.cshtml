@model FoodAppMVC.WebMVC.Models.EditDishViewModel
@{
    ViewData["Title"] = "Edit Dish";
}

<main class="main-full d-flex justify-content-center align-items-center">
    <div class="container p-5" style="max-width: 80%; background: rgba(255,255,255,0.9); border-radius: 20px;">
        <h2 class="text-center mb-4" style="font-family: 'Pattaya', cursive;">Edit Dish</h2>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="DishId" />

            <div class="row mb-3">
                <div class="col">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="Type" class="form-label">Type</label>
                    <input asp-for="Type" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="PreparationTimeMinutes" class="form-label">Prep Time (min)</label>
                    <input asp-for="PreparationTimeMinutes" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Recipe" class="form-label">Recipe</label>
                <textarea asp-for="Recipe" class="form-control"></textarea>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <label asp-for="Calories" class="form-label">Calories</label>
                    <input asp-for="Calories" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="Proteins" class="form-label">Proteins</label>
                    <input asp-for="Proteins" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="Fats" class="form-label">Fats</label>
                    <input asp-for="Fats" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="Carbohydrates" class="form-label">Carbs</label>
                    <input asp-for="Carbohydrates" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Ingredients</label>
                <div class="d-flex flex-wrap gap-3">
                    @foreach (var item in ViewBag.AllIngredients as List<SelectListItem>)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox"
                                   name="SelectedIngredientIds"
                                   value="@item.Value"
                                   id="ingr_@item.Value"
                            @(item.Selected ? "checked" : "") />
                            <label class="form-check-label" for="ingr_@item.Value">@item.Text</label>
                        </div>
                    }
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="ImageFile" class="form-label">Image</label>
                <input type="file" asp-for="ImageFile" class="form-control" />
            </div>

            <div class="d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-success">Update Dish</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
