@model List<FoodApp.Domain.Entities.User>

@{
    ViewData["Title"] = "All Users";
}

<h1>All Registered Users</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>UserId</th>
            <th>Username</th>
            <th>Email</th>
            <th>RegistrationDate</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.Count; i++)
    {
        var user = Model[i];
        <tr>
            <td>@user.UserId</td>
            <td>@user.Username</td>
            <td>@user.Email</td>
            <td>@user.RegistrationDate</td>
            <td>
                @(user.Email == "yevgieniia.riabichenko@gmail.com" ? "Admin" : "User")
            </td>
        </tr>
    }
    </tbody>
</table>
