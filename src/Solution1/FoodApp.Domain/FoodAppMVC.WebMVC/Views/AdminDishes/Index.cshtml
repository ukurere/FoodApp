@model List<Dish>

@{
    ViewData["Title"] = "Manage Dishes";
}

<link rel="stylesheet" href="~/css/dishes.css" asp-append-version="true" />

<main class="main-full">
    <div class="dishes-header">
        <div class="admin-dishes-header">
            <h1 class="admin-title">Manage Dishes</h1>
            <a asp-action="Create" class="add-dish-button">+ Add Dish</a>
        </div>
    </div>

    <div class="dishes-page-wrapper">
        <div class="dish-cards-grid">
            @foreach (var dish in Model)
            {
                var imageName = dish.Name.ToLower().Replace(" ", "") + ".jpg";
                var imageUrl = Url.Content("~/images/" + imageName);

                <div class="dish-card">
                    <div class="dish-image-wrapper">
                        <img src="@imageUrl" alt="@dish.Name" />
                    </div>
                    <h5>@dish.Name</h5>
                    <div class="meta">
                        <span>@dish.Type</span>
                        <span>@dish.PreparationTimeMinutes min</span>
                    </div>
                    <div class="admin-actions">
                        <a asp-action="Edit" asp-route-id="@dish.DishId" class="btn edit-btn">Edit</a>
                        <form asp-action="Delete" asp-route-id="@dish.DishId" method="post" style="display:inline;">
                            <button type="submit" class="btn delete-btn">Delete</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</main>
