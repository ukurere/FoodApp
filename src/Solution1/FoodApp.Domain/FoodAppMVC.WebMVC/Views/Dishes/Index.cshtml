@model IEnumerable<Dish>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreparationTimeMinutes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.PreparationTimeMinutes)</td>
                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                <td>@Html.DisplayFor(modelItem => item.Recipe)</td>

                <td>
                    <ul>
                        @foreach (var di in item.DishIngredients)
                        {
                            <li>
                                @di.Ingredient.Name x @di.CntIngredient
                                @(di.IsMandatory ? "(required)" : "(optional)")
                            </li>
                        }
                    </ul>
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.DishId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DishId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DishId">Delete</a>
                </td>
            </tr>

}
    </tbody>
</table>
