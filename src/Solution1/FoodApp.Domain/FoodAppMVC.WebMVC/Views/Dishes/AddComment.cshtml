@model AddCommentViewModel
@using FoodAppMVC.WebMVC.Models

<form asp-action="AddComment" method="post">
    <input type="hidden" asp-for="DishId" />

    <div class="mb-3">
        <label asp-for="Text" class="form-label">Comment</label>
        <textarea asp-for="Text" class="form-control"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RatingValue" class="form-label">Rating</label>
        <select asp-for="RatingValue" class="form-control">
            <option value="">Select a rating</option>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <span asp-validation-for="RatingValue" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Submit Comment</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
