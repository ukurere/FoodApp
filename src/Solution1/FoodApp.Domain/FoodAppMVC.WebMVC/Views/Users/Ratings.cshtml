@using FoodApp.Domain.Entities
@model List<Rating>

@{
    ViewData["Title"] = "Мої оцінки";
}

<h2>Your ratings for dishes</h2>

@if (!Model.Any())
{
    <p>You haven't left any marks yet.</p>
}
else
{
    <ul>
        @foreach (var rating in Model)
        {
            <li>
                <strong>@rating.Dish?.Name</strong>: @rating.RatingValue з 5
            </li>
        }
    </ul>
}
