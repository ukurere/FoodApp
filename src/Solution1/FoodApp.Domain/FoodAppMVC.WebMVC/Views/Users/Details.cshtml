@model FoodApp.Domain.Entities.User
@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-5">
    <div class="bg-white p-5 rounded-4 shadow-sm mx-auto" style="max-width: 900px;">
        <h2 class="text-center mb-4" style="font-family: 'Amatic SC'; font-size: 2.5rem;">User Details</h2>

        <dl class="row">
            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">@Model.Username</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">PasswordHash</dt>
            <dd class="col-sm-9">@Model.PasswordHash</dd>

            <dt class="col-sm-3">Registration Date</dt>
            <dd class="col-sm-9">@Model.RegistrationDate.ToString("dd.MM.yyyy HH:mm:ss")</dd>
        </dl>

        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-primary me-2">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
