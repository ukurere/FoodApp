@model FoodApp.Domain.Entities.User
@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-5">
    <div class="bg-white p-5 rounded-4 shadow-sm mx-auto" style="max-width: 900px;">
        <h2 class="text-center mb-4" style="font-family: 'Amatic SC'; font-size: 2.5rem;">Edit User</h2>

        <form asp-action="Edit">
            <input type="hidden" asp-for="UserId" />
            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="PasswordHash" class="form-label"></label>
                <input asp-for="PasswordHash" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="RegistrationDate" class="form-label"></label>
                <input asp-for="RegistrationDate" class="form-control" />
            </div>
            <div class="text-center">
                <input type="submit" value="Save" class="btn btn-primary me-2" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
