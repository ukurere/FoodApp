@model FoodApp.Domain.Entities.User
@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-5">
    <div class="bg-white p-5 rounded-4 shadow-sm mx-auto" style="max-width: 900px;">
        <h2 class="text-center mb-4" style="font-family: 'Amatic SC'; font-size: 2.5rem;">Delete User</h2>

        <p class="text-center fs-5 mb-4">Are you sure you want to delete this user?</p>

        <dl class="row">
            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">@Model.Username</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">PasswordHash</dt>
            <dd class="col-sm-9">@Model.PasswordHash</dd>

            <dt class="col-sm-3">Registration Date</dt>
            <dd class="col-sm-9">@Model.RegistrationDate.ToString("dd.MM.yyyy HH:mm:ss")</dd>
        </dl>

        <form asp-action="Delete" method="post" class="text-center mt-4">
            <input type="hidden" asp-for="UserId" />
            <button type="submit" class="btn btn-danger me-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
