@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<link href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@700&family=Montserrat&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />

<div class="auth-page d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="auth-form-wrapper p-4 rounded" style="background-color: #fef6e4; box-shadow: 0 8px 24px rgba(0,0,0,0.1); width: 500px;">
        <h2 class="text-center mb-4" style="font-family: 'Amatic SC', cursive; font-size: 48px; color: #38220f;">Register</h2>
        <form asp-action="Register">
            <div class="d-flex gap-3">
                <div class="form-group w-100">
                    <label asp-for="Username">Username</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group w-100">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex gap-3 mt-3">
                <div class="form-group w-100">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group w-100">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4 py-2" style="border-radius: 1rem;">Create Account</button>
            </div>
        </form>
    </div>
</div>
