@model FoodAppMVC.WebMVC.Models.AddCommentViewModel
@{
    ViewData["Title"] = "Add Comment";
}

<div class="container mt-5">
    <div class="bg-white p-5 rounded-4 shadow-sm mx-auto" style="max-width: 900px;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-center w-100" style="font-family: 'Amatic SC'; font-size: 2.5rem;">Add Comment</h2>
        </div>

        <form asp-action="AddComment" asp-controller="Comments">
            <input type="hidden" asp-for="DishId" />

            <div class="mb-3">
                <label asp-for="Text" class="form-label"></label>
                <textarea asp-for="Text" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="RatingValue" class="form-label"></label>
                <input asp-for="RatingValue" type="number" min="1" max="5" class="form-control" />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-success me-2">Submit</button>
                <a asp-action="Details" asp-controller="Dishes" asp-route-id="@Model.DishId" class="btn btn-secondary">Back to Dish</a>
            </div>
        </form>
    </div>
</div>
