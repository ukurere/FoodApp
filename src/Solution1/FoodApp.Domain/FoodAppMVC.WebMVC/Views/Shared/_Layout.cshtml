<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodAppMVC.WebMVC</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pattaya&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodAppMVC.WebMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-success bg-opacity-75 border-bottom shadow-sm mb-3">
            <div class="container-fluid d-flex align-items-center">

                <!-- Іконка бургер-меню -->
                <button id="menu-toggle" class="burger-icon">
                    &#9776;
                </button>

                <a class="navbar-brand text-white ms-2" asp-controller="Home" asp-action="Index" style="font-family: 'Pattaya', sans-serif;">
                    Healthy Harmony
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Головна</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Політика</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Привіт, @User.Identity.Name!
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Favorites">Обране</a></li>
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Comments">Мої коментарі</a></li>
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Ratings">Мої оцінки</a></li>
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Profile">Профіль</a></li>
                                    <li>
                                        <form asp-controller="Users" asp-action="Logout" method="post" class="dropdown-item m-0 p-0">
                                            <button type="submit" class="btn btn-link text-start w-100">Вийти</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Users" asp-action="Login">Вхід</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Users" asp-action="Register">Реєстрація</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Бокове меню користувача -->
    <div id="user-sidebar" class="user-sidebar">
        <button id="menu-close" class="close-btn">&times;</button>
        <h5>Меню користувача</h5>
        <ul>
            <li><a href="/Users/Favorites">💚 Переглянути обране</a></li>
            <li><a href="/Users/Comments">💬 Переглянути свої коментарі</a></li>
            <li><a href="/Users/Ratings">⭐ Переглянути свої оцінки</a></li>
            <li><a href="/Users/Profile">🧍 Профіль</a></li>
        </ul>
    </div>


    <main class="main-full">
        @RenderBody()
    </main>

    <footer class="border-top text-muted mt-5 py-3 bg-light text-center">
        <div class="container">
            &copy; 2025 - Healthy Harmony | <a asp-controller="Home" asp-action="Privacy">Політика конфіденційності</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const toggleButton = document.getElementById("menu-toggle");
            const closeButton = document.getElementById("menu-close");
            const sidebar = document.getElementById("user-sidebar");

            toggleButton?.addEventListener("click", function () {
                sidebar.classList.add("open");
            });

            closeButton?.addEventListener("click", function () {
                sidebar.classList.remove("open");
            });
        });
    </script>

    @await RenderSectionAsync("Styles", required: false)
    @RenderSection("Scripts", required: false)
</body>
</html>
