@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">

    <div class="text-center mb-4">
        <h1 class="display-4">FoodApp Analytics Dashboard</h1>
        <p class="lead">Explore recipe statistics and ingredient usage</p>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">Go to Ingredient Stats</h5>
                    <p class="card-text">View how often each ingredient is used across dishes.</p>
                    <a href="/Stats/IngredientFrequency" class="btn btn-primary">View Table</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">Coming Soon: Graphs</h5>
                    <p class="card-text">You'll soon see visual graphs and trends here.</p>
                    <button class="btn btn-secondary" disabled>Not Yet Available</button>
                </div>
            </div>
        </div>
    </div>

</div>
